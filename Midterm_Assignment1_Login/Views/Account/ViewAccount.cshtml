<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>View Account</title>
    <link href="~/css/View.css" rel="stylesheet" />
</head>
<body>
    <div class="container">
        <div class="header">
            <h1>GitGit</h1>
            <br />
            <br />
        </div>
        <div class="account-info">
            <h2>Account Information</h2>
            <p><strong>Username:</strong> @Model.Username</p>
            <!-- Display hashed password -->
            <p><strong>Password:</strong> <span id="hashedPassword"></span></p>
        </div>
    </div>

    <!-- Include script to hash the password -->
    <script>
        // Hash the password using a simple hashing function (not recommended for real-world applications)
        function hashPassword(password) {
            var hashedPassword = '';
            for (var i = 0; i < password.length; i++) {
                hashedPassword += '*' // Replace each character with *
            }
            return hashedPassword;
        }

        // Get the password from the server and hash it for display
        var passwordFromServer = '@Model.Password'; // Assuming you're injecting the password value from the server-side
        var hashedPassword = hashPassword(passwordFromServer);
        document.getElementById('hashedPassword').textContent = hashedPassword;
    </script>
</body>
</html>
